<button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
<block wx:else>
  <!-- 顶部信息 -->
  <view class="dinbu">
    <view class="userinfo-avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='username_name'>
      <view class='tex_text'>
        <open-data type="userNickName"></open-data>
      </view>
    </view>
  </view>
  <view style='background:#fff;height:50px;width:100%;margin-top:10px;'>
    <view style='display:flex;flex-direction: row;'>
      <view style='margin:20rpx;'>
        <view style='color:#666;'>国家:</view>
      </view>
      <view style='margin:20rpx;color:#666;'>
        <open-data type="userCountry"></open-data>
      </view>
    </view>
  </view>
  
  <view style='background:#fff;height:50px;width:100%;margin-top:10px;'>
    <view style='display:flex;flex-direction: row;'>
      <view style='margin:20rpx;'>
        <view style='color:#666;'>性别：</view>
      </view>
      <view style='margin:20rpx;color:#666;'>
        <open-data type="userGender"></open-data>
      </view>
    </view>
  </view>

  <view style='background:#fff;height:50px;width:100%;margin-top:10px;'>
    <view style='display:flex;flex-direction: row;'>
      <view style='margin:20rpx;'>
        <view style='color:#666;'>城市:</view>
      </view>
      <view style='margin:20rpx;color:#666;'>
        <open-data type="userCity"></open-data>
      </view>
    </view>
  </view>

  <view style='background:#fff;height:50px;width:100%;margin-top:10px;'>
    <view style='display:flex;flex-direction: row;'>
      <view style='margin:20rpx;'>
        <view style='color:#666;'>省份:</view>
      </view>
      <view style='margin:20rpx;color:#666;'>
        <open-data type="userProvince"></open-data>
      </view>
    </view>
  </view>

  <view style='background:#fff;height:50px;width:100%;margin-top:10px;'>
    <view style='display:flex;flex-direction: row;'>
      <view style='margin:20rpx;'>
        <view style='color:#666;'>语言:</view>
      </view>
      <view style='margin:20rpx;color:#666;'>
        <open-data type="userLanguage"></open-data>
      </view>
    </view>
  </view>


  <view bindtap='QhuanCun' style='background:#fff;height:50px;width:100%;margin-top:10px;'>
    <view style='display:flex;flex-direction: row;'>
      <view style='margin:20rpx 300rpx;'>
        <view style='color:#000;'>清空缓存</view>
      </view>
    </view>
  </view>
</block>