<view>
  <image style='width:100%;height:160px;' src='https://www.blackboy.club/xiaoyuan/youhua/youhua_01.jpg'></image>
</view>


<!-- 发信息 -->
<view bindtap='yh' style='position: absolute;bottom:20px;right:20px;'>
  <image style='width:30px;height:30px;' src='../../images/fatie.png'></image>
</view>


<view class='shu'>
  <!--导航 -->
  <view class='hen'>
    <view wx:for="{{hendao}}">
      <view bindtap='Dhendao' data-Id='{{index}}' class='hendao {{hendaoId == index ? "xuan":""}}'>{{item.name}}</view>
    </view>
  </view>
  <!-- 聊天 -->
  <view class='hen_01'>
    <view wx:for="{{hendao[hendaoId].liao}}">
      <view class='tupian_text'>
        <view class="tupian_img">
          <image style='width:30px;height:30px;border-radius:20%' src='{{item.liaoUrl}}'></image>
          <view style='margin-left:6px;color:#666;'>{{item.liaoName}}</view>
        </view>
        <view class="font_text">
          {{item.liaoText}}
        </view>
        <view class='huifu'>
          <view class=''>
            <image style="width:20px;height:20px;" src='../../images/huifu.png'></image>
          </view>
          <view style='font-size:0.9rem;color:#666;'>回复</view>
        </view>
        <!-- 回复 -->
        <view style="display:flex;flex-direction: column;margin-left:35px;">
          <view style='font-size:0.8rem; {{item.huifu==""?"display:none;":""}}'>留言:</view>
          <view wx:for="{{item.huifu}}">
            <view style='display:flex;flex-direction:column;'>
              <view style='font-size:0.6rem;color:rgb(10, 185, 238);'>{{item.huifuName}}:</view>
              <view style="font-size:0.6rem;">{{item.huifuText}}</view>
            </view>
          </view>
        </view>
        <view class='line'></view>
      </view>
    </view>
  </view>
</view>