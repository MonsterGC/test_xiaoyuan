<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" width="100%" height="150" />
    </swiper-item>
  </block>
</swiper>
<!-- 导航 -->
<view>
  <view class='daohan'>
    <block wx:for="{{daohanY}}">
      <view bindtap='daohan' data-Id='{{index}}' class='daohan_01 {{index==daohanId?"xuan":""}}'>{{item.daohanName}}</view>
    </block>
  </view>
</view>

<view class='zhusho'>

  <!-- 活动 -->
  <view wx:for="{{daohanY[daohanId].daohanHD}}">
    <view class='zhusho_01'>
      <view style='width:100%;height:1rpx;opacity:0.3;background:#666;'></view>
      <view class='zhusho_02'>
        <view style='margin:10px 0 0 10px;width:80px;height:80px;'>
          <image style='width:80px;border-radius:5px;height:80px;' src='{{item.Url}}'></image>
        </view>
        <view style='margin:10px;height:80px;display:flex;flex-direction:column;'>
          <view>{{item.Title}}</view>
          <view style='display:flex;flex-direction:row;margin:10px 0 0 10px;'>
            <view>
              <image style='width:20px;height:20px;' src='../../images/zhusho_miao.png'></image>
            </view>
            <view style="font-size:0.7rem;margin-left:3px;color:#666;">{{item.Text}}</view>
          </view>
          <view style='display:flex;flex-direction:row;margin-top:10px;'>
            <view>
              <image style='width:15px;height:15px;' src='../../images/weizhi.png'></image>
            </view>
            <view style="font-size:0.6rem;margin-top:5px;width:100px;">{{item.Address}}</view>
            <view>
              <button style="width:70px;height:30px;margin-left:60px;font-size:0.9rem;color:white;background:rgb(227, 247, 141);line-height:30px;">详情></button>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

</view>